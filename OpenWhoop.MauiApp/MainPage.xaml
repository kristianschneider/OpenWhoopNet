<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenWhoop.MauiApp.MainPage"
             Title="OpenWhoop MAUI (HR Test)">

    <Grid RowDefinitions="Auto, Auto, *, Auto" ColumnDefinitions="*" Padding="10">

        <Button Grid.Row="0" Text="Scan for Devices" Clicked="OnScanClicked" Margin="0,0,0,10"/>

        <ListView Grid.Row="1" ItemsSource="{Binding Devices}" ItemSelected="OnDeviceSelected" Margin="0,0,0,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5">
                            <Label Text="{Binding Name}" FontAttributes="Bold"/>
                            <Label Text="{Binding Id}" FontSize="Micro"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ScrollView Grid.Row="2" Margin="0,10,0,0">
            <Label Text="{Binding ConsoleOutput}" FontSize="Small" LineBreakMode="WordWrap"/>
        </ScrollView>

        <Label Grid.Row="3" x:Name="StatusLabel" Text="Status: Ready" FontSize="Micro" Margin="0,5,0,0"/>

    </Grid>
</ContentPage>