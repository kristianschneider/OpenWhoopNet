<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OpenWhoop.MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:OpenWhoop.MauiApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="OpenWhoop.MauiApp" ForegroundColor="White">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="Settings" />
    <ShellContent
        Title="Data Explorer"
        ContentTemplate="{DataTemplate pages:DataExplorerPage}"
        Route="DataExplorer" />

</Shell>
