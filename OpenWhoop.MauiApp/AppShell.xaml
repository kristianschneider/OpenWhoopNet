<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OpenWhoop.MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OpenWhoop.MauiApp"
    Shell.FlyoutBehavior="Flyout"
    Title="OpenWhoop.MauiApp" ForegroundColor="White">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" Shell.NavBarIsVisible="False"/>
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings" />

</Shell>
