<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Modern “Electric+Teal+Coral” Color Scheme -->

    <!-- Brand colors -->
    <Color x:Key="Primary">#007ACC</Color>              <!-- vivid blue -->
    <Color x:Key="PrimaryDark">#005A9E</Color>          <!-- darker blue -->
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>      <!-- white text on dark -->

    <Color x:Key="Secondary">#2BCBBA</Color>            <!-- fresh teal -->
    <Color x:Key="SecondaryDarkText">#0A2E36</Color>    <!-- deep slate for contrast -->

    <Color x:Key="Tertiary">#E43F5A</Color>             <!-- bright coral -->

    <!-- Core utilities -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- Accent extras -->
    <Color x:Key="Magenta">#D7263D</Color>              <!-- hot magenta accent -->
    <Color x:Key="MidnightBlue">#1B1F3B</Color>         <!-- very dark blue -->
    <Color x:Key="OffBlack">#121212</Color>             <!-- softer black -->

    <!-- Grayscale (clean, neutral) -->
    <Color x:Key="Gray100">#F7F7F7</Color>
    <Color x:Key="Gray200">#E1E1E1</Color>
    <Color x:Key="Gray300">#CFCFCF</Color>
    <Color x:Key="Gray400">#B1B1B1</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#7E7E7E</Color>
    <Color x:Key="Gray900">#2B2B2B</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Corresponding Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}" />
</ResourceDictionary>
